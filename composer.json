{
    "name": "hop/sitemap",
    "description": "package sitemap",
    "autoload": {
        "psr-4": {
            "Hop\\Sitemap\\": "src/"
        }
    },
    "authors": [
        {
            "name": "hophd",
            "email": "dinhhop172@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "phpstan": [
            "./vendor/bin/phpstan analyse app config public routes"
        ],
        "codesniff": [
            "./vendor/bin/phpcs --standard=phpcs.xml app config routes"
        ]
    }
}
